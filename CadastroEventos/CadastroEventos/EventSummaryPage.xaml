<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CadastroEventos.EventSummaryPage"
    Title="Resumo do Evento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Resumo do Evento" FontSize="22" HorizontalOptions="Center" />

            <Label Text="Nome:" FontAttributes="Bold" />
            <Label Text="{Binding Nome}" />

            <Label Text="Local:" FontAttributes="Bold" />
            <Label Text="{Binding Local}" />

            <Label Text="Data Início:" FontAttributes="Bold" />
            <Label Text="{Binding DataInicio, StringFormat='{0:dd/MM/yyyy}'}" />

            <Label Text="Data Término:" FontAttributes="Bold" />
            <Label Text="{Binding DataFim, StringFormat='{0:dd/MM/yyyy}'}" />

            <Label Text="Duração (dias):" FontAttributes="Bold" />
            <Label Text="{Binding DuracaoDias}" />

            <Label Text="Número de participantes:" FontAttributes="Bold" />
            <Label Text="{Binding NumeroParticipantes}" />

            <Label Text="Custo por participante:" FontAttributes="Bold" />
            <Label Text="{Binding CustoPorParticipante, StringFormat='{0:C}'}" />

            <Label Text="Custo total:" FontAttributes="Bold" />
            <Label Text="{Binding CustoTotal, StringFormat='{0:C}'}" FontSize="18" />

            <Button Text="Voltar" Clicked="OnVoltarClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
